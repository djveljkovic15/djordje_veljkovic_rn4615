<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.view.activities.NoteActivity"
    >


    <EditText
        android:id="@+id/activityNoteTitleEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="This is a note title.."
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"

        />

    <EditText
        android:id="@+id/activityNoteContentEt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="This is a note content... :)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activityNoteTitleEt"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        />

    <Button
        android:id="@+id/activityNoteOdustaniBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activityNoteContentEt"
        app:layout_constraintEnd_toEndOf="@id/activityNoteTitleEt"
        android:text="Odustani"
        android:textColor="@color/design_default_color_background"
        android:background="@color/cardview_dark_background"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:textSize="10sp"
        />

    <Button
        android:id="@+id/activityNoteIzmeniBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activityNoteTitleEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activityNoteContentEt"
        android:text="Izmeni"
        android:textColor="@color/design_default_color_background"
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:textSize="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>