<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="25dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/recyclerOtpusteniPredmetTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:id="@+id/recyclerOtpusteniTipTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerOtpusteniPredmetTv"

            android:layout_marginLeft="25dp"

            />

        <TextView
            android:id="@+id/recyclerOtpusteniNastavnikTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerOtpusteniTipTv"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:id="@+id/recyclerOtpusteniUcionicaTv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerOtpusteniNastavnikTv"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:id="@+id/recyclerOtpusteniGrupeTv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerOtpusteniUcionicaTv"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:id="@+id/recyclerOtpusteniDanTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/recyclerOtpusteniGrupeTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/recyclerOtpusteniUcionicaTv"
            android:layout_marginLeft="55dp"

            />
        <TextView
            android:id="@+id/recyclerOtpusteniTerminTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/recyclerOtpusteniGrupeTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerOtpusteniDanTv"
            android:layout_marginLeft="35dp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>