<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="25dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/recyclerRasporedPredmetTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:id="@+id/recyclerRasporedTipTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerRasporedPredmetTv"

            android:layout_marginLeft="25dp"

            />

        <TextView
            android:id="@+id/recyclerRasporedNastavnikTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerRasporedTipTv"
            android:layout_marginLeft="25dp"

            />

        <TextView
            android:id="@+id/recyclerRasporedUcionicaTv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerRasporedNastavnikTv"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:id="@+id/recyclerRasporedGrupeTv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerRasporedUcionicaTv"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:id="@+id/recyclerRasporedDanTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/recyclerRasporedGrupeTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/recyclerRasporedUcionicaTv"
            android:layout_marginLeft="55dp"

            />
        <TextView
            android:id="@+id/recyclerRasporedTerminTv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/recyclerRasporedGrupeTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerRasporedDanTv"
            android:layout_marginLeft="35dp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>