<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="25dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/recyclerBeleskeTitleTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Ovde je neki naslov..."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"

            />
        <TextView
            android:id="@+id/recyclerBeleskeContentTv"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:hint="Ovde je neki tekst..."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerBeleskeTitleTv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"

            />

        <ImageView
            android:id="@+id/recyclerBeleskeDeleteIv"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/face"
            />

        <ImageView
            android:id="@+id/recyclerBeleskeEditIv"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerBeleskeDeleteIv"
            app:layout_constraintBottom_toTopOf="@id/recyclerBeleskeArchiveIv"
            app:layout_constraintStart_toStartOf="@id/recyclerBeleskeDeleteIv"
            android:src="@drawable/face"
            />

        <ImageView
            android:id="@+id/recyclerBeleskeArchiveIv"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/recyclerBeleskeDeleteIv"
            android:src="@drawable/face"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>